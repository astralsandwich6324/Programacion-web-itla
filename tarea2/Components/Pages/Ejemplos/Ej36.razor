@page "/Ej36"
@rendermode InteractiveServer

<PageTitle>Ejercicio 36</PageTitle>

<h3>Ejercicio 36</h3>

<p>Obtener el n-ésimo elemento de la serie de Fibonacci</p>

<div class="form-group">
    <label for="txtNumero">Número (n)</label>
    <input type="number" class="form-control" id="txtNumero" @bind="numero" />
</div>

<div class="form-group">
    <button class="btn btn-primary" @onclick="Calcular">Calcular</button>
</div>

<div class="form-group">
    Elemento de Fibonacci: @resultado
</div>

@code{
    private int numero = 0;
    private string resultado = "";

    private void Calcular(){
        resultado = Fibonacci(numero).ToString();
    }

    private int Fibonacci(int n) {
        if (n < 0) return 0; 
        if (n == 0) return 0; 
        if (n == 1) return 1; 

        int a = 0, b = 1, temp;

        for (int i = 2; i <= n; i++) {
            temp = a + b;
            a = b;
            b = temp;
        }

        return b; 
    }
}
