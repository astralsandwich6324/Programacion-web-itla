@page "/Ej10"
@rendermode InteractiveServer

<PageTitle>Ejercicio 10</PageTitle>

<h3>Ejercicio 10</h3>

<p>Retornar el primer dígito de un número entero</p>

<div class="form-group">
    <label for="txtNumero">Número</label>
    <input type="number" class="form-control" id="txtNumero" @bind="numero" />
</div>

<div class="form-group">
    <button class="btn btn-primary" @onclick="Calcular">Calcular</button>
</div>

<div class="form-group">
    El primer dígito es: @resultado
</div>

@code{
    private int numero = 0;
    private string resultado = "";

    private void Calcular(){
        
        string numeroComoTexto = numero.ToString();
        
        
        resultado = numeroComoTexto[0].ToString();
    }
}
